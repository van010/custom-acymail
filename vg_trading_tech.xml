<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0" type="plugin" group="system" method="upgrade">
	<name>PLG_VG_TRADING_TECH_NAME</name>
	<author>Vangogh</author>
	<creationDate>July 11th, 2024</creationDate>
	<authorEmail>van.vanbac010@gmail.com</authorEmail>
	<authorUrl>www.linkedin.com/in/van-hs-0a00511b2</authorUrl>
	<version>1.0.0</version>
	<description>Do some custom tasks for Trading Technologies component</description>
	<files>
		<filename plugin="vg_trading_tech">vg_trading_tech.php</filename>
		<filename>helper.php</filename>
		<folder>assets</folder>
		<folder>layouts</folder>
		<folder>adapters</folder>
		<folder>languages</folder>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB/en-GB.plg_system_vg_trading_tech.ini</language>
		<language tag="en-GB">languages/en-GB/en-GB.plg_system_vg_trading_tech.sys.ini</language>
	</languages>

	<config>
		<fields name="params" addfieldpath="/plugins/system/vg_trading_tech/layouts/fields">
			<fieldset name="basic">
				<field
					name="load_positions"
					id="load-positions"
					type="loadPositions"
					label="PLG_VG_TRADING_TECH_POSITIONS_SELECT_ROW"
					addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_tradingtech"
				>
				</field>
				<field name="preview_acym_mail_templates"
					   id="preview-acym-mail-templates"
					   type="acymMailPreview"
					   label="PLG_VG_TRADING_TECH_ACYM_MAIL_SELECT_TEMPLATE"
					   addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_acym">
				</field>
				<field name="japanel" type="japanel" hidden="true" addfieldpath="/plugins/system/vg_trading_tech/assets/"/>
			</fieldset>

			<fieldset addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_tradingtech"
					  name="config_trading_positions"
					  label="PLG_VG_TRADING_TECH_CONFIG_POSITIONS_NAME">
				<field name="limit_positions" type="text" label="PLG_VG_TRADING_TECH_LIMIT_POSITION"/>
				<field name="insert_position_by" type="list" default="insert_multiple_by_pointer" label="PLG_VG_TRADING_TECH_INSERT_LABEL">
					<option value="insert_one_by_shortcode_value">PLG_VG_TRADING_TECH_INSERT_ONE_BY_SHORT_CODE_WITH_VALUE</option>
					<option value="insert_one_by_shortcode_key_value">PLG_VG_TRADING_TECH_INSERT_ONE_BY_SHORT_CODE_WITH_KEY_VALUE</option>
					<option value="insert_multiple_by_pointer">PLG_VG_TRADING_TECH_INSERT_MULTIPLE_BY_POINTER</option>
					<option value="insert_multiple_by_text_selected">PLG_VG_TRADING_TECH_INSERT_MULTIPLE_BY_SELECTED_TEXT</option>
				</field>
				<field name="select_positions" type="selectPositions" label="PLG_VG_TRADING_TECH_SELECT_POSITION_FIELDS"/>
				<field name="exclude_positions" type="excludePositions" label="PLG_VG_TRADING_TECH_EXCLUDE_POSITION_FIELDS"/>
			</fieldset>

			<fieldset addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_acym"
					  name="config_acym_mail_templates"
					  label="PLG_VG_TRADING_TECH_ACYM_MAIL_CONFIGS">
				<field name="load_acym_mail"
					   type="loadAcymMailTemplates"
					   label="PLG_VG_TRADING_TECH_MAIL_PREVIEW"/>
			</fieldset>

			<fieldset addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_tradingtech"
					  name="config_users_send_mail"
					  label="PLG_VG_TRADING_TECH_CONFIG_USERS_SEND_MAIL">
				<field name="select_users_send_mail"
					   type="selectUsersSendMail" label="PLG_VG_TRADING_TECH_SELECT_USER_SEND_MAIL"/>
			</fieldset>

			<fieldset addfieldpath="/plugins/system/vg_trading_tech/layouts/fields/com_tradingtech"
					  name="config_trading_labels"
					  label="PLG_VG_TRADING_TECH_CONFIG_TRADING_LABEL">
				<field name="select_trading_labels"
					   type="selectTradingLabels" label="PLG_VG_TRADING_TECH_SELECT_TRADING_LABEL"/>
			</fieldset>
		</fields>
	</config>
</extension>
